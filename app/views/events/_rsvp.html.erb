<!-- Modal -->
<div class="modal fade" id="rsvp" tabindex="-1" role="dialog" aria-labelledby="RSVP">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="RSVP">RSVP</h4>
      </div>
      <%= simple_form_for(@guest) do |f| %>
      <div class="modal-body">
       
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name, required: true %>
          <%= f.input :email, required: true %>
          <%= f.input :event_id, :as => :hidden, required: true %>
          <%= f.input :comingwith, required: true, input_html: {value: 0} %>
        </div>


      </div>
      <div class="modal-footer">
        <%= f.button :submit, class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>